        android:background="@color/category_nemo">

        <TextView
            style="@style/CategoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_nemo" />
    </FrameLayout>

    <!--Anne Frank Huis-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_annefrankhuis">

        <TextView
